{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "jsx": true,
    "modules": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "arrow-spacing": [2, { "before": true, "after": true }],
    "comma-dangle": [2, "never"],
    "curly": 2,
    "eol-last": 2,
    "id-length": [2, {"min": 2, "max": 50, "properties": "never", "exceptions": ["e", "i", "x", "_", "R"]}],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-alert": 0,
    "no-console": 0,
    "no-const-assign": 2,
    "no-else-return": 2,
    "no-shadow": 2,
    "no-unused-vars": 2,
    "no-var": 2,
    "prefer-const": 2,
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "spaced-comment": 0,
    "strict": [2, "never"],
    "react/no-multi-comp": 0,
    "react/prefer-es6-class": 2,
    "react/jsx-uses-react": [2, { "pragma": "React" }],
    "react/jsx-uses-vars": 2,
    "react/no-danger": 0
  }
}
